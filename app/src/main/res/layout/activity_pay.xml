<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PayActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:background="#EFEFEF"

                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="THÔNG TIN THANH TOÁN"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textColor="#C62121"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"

                    android:background="@drawable/border_radius"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Thông tin sản phẩm"
                        android:textSize="25dp"

                        android:textStyle="bold" />

                    <ListView
                        android:id="@+id/lvKq"
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"

                        android:nestedScrollingEnabled="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_radius"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tvKH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông tin khách hàng"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:textStyle="bold"
                        android:textSize="25dp"/>

                    <EditText
                        android:id="@+id/edtHoTen"
                        android:layout_width="450dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Tên"
                        android:background="@drawable/borderweight_radius_textview_"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:paddingLeft="15dp"
                        />
                    <EditText
                        android:id="@+id/edtSDT"
                        android:layout_width="450dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="SĐT"
                        android:background="@drawable/borderweight_radius_textview_"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:paddingLeft="15dp"

                        />
                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="450dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Email"
                        android:background="@drawable/borderweight_radius_textview_"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:paddingLeft="15dp"
                        />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hình thức nhận hàng"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:textStyle="bold"
                        android:textSize="25dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="10dp"
                        >

                        <RadioButton
                            android:id="@+id/rdoNhanTaiCuaHang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="40"
                            android:text="Nhận tại cửa hàng"
                            android:textSize="15dp"
                            tools:ignore="TextSizeCheck" />

                        <RadioButton
                            android:id="@+id/rdoNhanTaiNha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="40"
                            android:text="Nhận tại nhà"
                            android:textSize="15dp"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTinhTp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="20dp"
                        android:text="Tỉnh, thành phố"
                        android:textStyle="bold"

                        />

                    <Spinner
                        android:id="@+id/spnTinhTp"
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:spinnerMode="dropdown"


                        />
                    <TextView
                        android:id="@+id/tvQH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="20dp"
                        android:text="Quận, huyện"
                        android:textStyle="bold"
                        />

                    <Spinner
                        android:id="@+id/spnQuanHuyen"
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:spinnerMode="dropdown"
                        />

                    <EditText
                        android:id="@+id/edtKhacDuongXa"
                        android:layout_width="450dp"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:layout_gravity="center"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:hint="Khác (Đường,xã...)"
                        android:layout_marginBottom="40dp"/>


                </LinearLayout>
                <LinearLayout

                    android:layout_width="500dp"
                    android:layout_height="420dp"
                    android:background="@drawable/border_radius"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin thanh toán"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Quý khách vui lòng lựa chọn các hình thức thanh toán dưới đây:"
                        android:textSize="15dp" />




                    <LinearLayout

                        android:layout_width="450dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/borderweight_radius_textview_">

                        <RadioButton
                            android:id="@+id/rdoMoMo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="15dp"
                            android:text=""
                            android:layout_gravity="center"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:src="@drawable/momologo"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingLeft="30dp"
                            android:text="Thanh toán momo"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="450dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/borderweight_radius_textview_">

                        <RadioButton
                            android:id="@+id/rdoVNpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="15dp"
                            android:text=""
                            android:layout_gravity="center"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:src="@drawable/logo_vnpay"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvVnPay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingLeft="30dp"
                            android:text="Thanh toán VNPAY"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="450dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/borderweight_radius_textview_">

                        <RadioButton
                            android:id="@+id/rdoTienmat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="15dp"
                            android:text=""
                            android:layout_gravity="center"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"

                                android:src="@drawable/logo_tt_tienmat"
                                />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvTTTienMat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingLeft="30dp"
                            android:text="Thanh toán tiền mặt"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/border_radius"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="450dp"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"

                        >

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            app:srcCompat="@drawable/giftboxx" />

                        <EditText
                            android:id="@+id/editTextText"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"

                            android:ems="10"
                            android:inputType="text"
                            android:layout_marginLeft="20dp"
                            android:hint="Mã khuyến mãi"
                            android:paddingLeft="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="450dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng cộng:"
                            android:textSize="20dp"/>

                        <TextView
                            android:id="@+id/tvToTal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:paddingRight="20dp"
                            android:textColor="#BB1044"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:layout_weight="1"

                            android:text="27.323.222" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnHoanThanh"
                        android:layout_width="500dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/custom_button_radius_product_details"
                        android:gravity="center"
                        android:text="HOÀN TẤT THỦ TỤC"
                        android:textSize="20dp"
                        app:backgroundTint="@null"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/black">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            app:srcCompat="@drawable/logomain"
                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="70dp"
                            >

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/fb_icon" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                app:srcCompat="@drawable/messenger_icon" />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ytb_icon" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Chính sách Bảo mật  |  Các Điều Khoản và Điều Kiện  |  Thông tin công ty"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="50dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>